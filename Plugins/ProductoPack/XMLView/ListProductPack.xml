        <column name="code" display="none" order="100">
            <widget type="text" fieldname="id" />
        </column>
        <column name="product" display="none" order="110">
            <widget type="text" fieldname="idproduct" />
        </column>
        <column name="reference" order="120">
            <widget type="text" fieldname="reference" />
        </column>
        <column name="attribute-value-1" order="130">
            <widget type="text" fieldname="nameattribute1" />
        </column>
        <column name="attribute-value-2" order="140">
            <widget type="text" fieldname="nameattribute2" />
