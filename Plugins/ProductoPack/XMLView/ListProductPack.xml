        <column name="description" order="150">
            <widget type="text" fieldname="name" />
        </column>
        <column name="items" display="right" order="160">
            <widget type="number" decimal="0" fieldname="items" />
        </column>
        <column name="priceitems" display="right" order="170">
            <widget type="money" fieldname="priceitems" />
        </column>
        <column name="price" display="right" order="180">
            <widget type="money" fieldname="price" />
        </column>
    </columns>
</view>