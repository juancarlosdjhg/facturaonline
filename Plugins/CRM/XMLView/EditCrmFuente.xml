<view>
    <columns>
        <group name="main" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="id" />
            </column>
            <column name="name" order="110">
                <widget type="text" fieldname="nombre" />
            </column>
            <column name="contacts" numcolumns="2" order="120">
                <widget type="number" decimal="0" fieldname="numcontactos" icon="fas fa-users" readonly="true" />
            </column>
            <column name="date" numcolumns="2" order="130">
                <widget type="date" fieldname="fecha" readonly="dinamic" />
            </column>
            <column name="description" numcolumns="12" order="130">
                <widget type="textarea" fieldname="descripcion" />
            </column>
        </group>
    </columns>
</view>