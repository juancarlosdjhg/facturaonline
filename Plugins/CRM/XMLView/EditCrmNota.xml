<view>
    <columns>
        <group name="main" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="id" />
            </column>
            <column name="user" order="110">
                <widget type="select" fieldname="nick" icon="fas fa-user-circle" readonly="true">
                    <values source="User" fieldcode="nick"/>
                </widget>
            </column>
            <column name="contact" titleurl="ListContacto" order="120">
                <widget type="autocomplete" fieldname="idcontacto" onclick="EditContacto" required="true">
                    <values source="Contacto" fieldcode="idcontacto"/>
                </widget>
            </column>
            <column name="interest" titleurl="ListContacto?activetab=ListCrmInteres" order="130">
                <widget type="select" fieldname="idinteres" onclick="EditCrmInteres">
                    <values source="crm_intereses" fieldcode="id" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="oportunity" order="140">
                <widget type="select" fieldname="idoportunidad" onclick="EditCrmOportunidad" readonly="true">
                    <values source="crm_oportunidades" fieldcode="id" fieldtitle="id"/>
                </widget>
            </column>
            <column name="date" order="150">
                <widget type="date" fieldname="fecha" readonly="true"/>
            </column>
            <column name="notice-date" order="160">
                <widget type="date" fieldname="fechaaviso"/>
            </column>
            <column name="observations" numcolumns="12" order="170">
                <widget type="textarea" fieldname="observaciones" required="true" />
            </column>
        </group>
    </columns>
</view>