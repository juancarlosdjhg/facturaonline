<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="edit">
            <column name="code" order="95" display="none" readonly="true">
                <widget type="text" fieldname="codtrazabilidad" readonly="true" />
            </column>
            <column name="partity" order="100">
                <widget type="text" fieldname="partida" />
            </column>
            <column name="lot" order="120">
                <widget type="text" fieldname="lote" />
            </column>
            <column name="description" order="130">
                <widget type="text" fieldname="descripcion" />
            </column>
            <column name="origin" order="140">
                <widget type="text" fieldname="procedencia" />
            </column>
            <column name="production-date" order="150" display="right">
                <widget type="date" fieldname="fechaproduccion" />
            </column>
            <column name="expiration-date" order="160" display="right">
                <widget type="date" fieldname="fechacaducidad" />
            </column>
            <column name="status" order="165" display="center">
                <widget type="select" fieldname="estado" required="true">
                        <values title="Activo">Activo</values>
                        <values title="Bloqueado">Bloqueado</values>
                        <values title="Caducado">Caducado</values>
                </widget>
            </column>
        </group>
    </columns>
</view>