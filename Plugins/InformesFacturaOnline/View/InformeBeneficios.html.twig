{% extends "Master/MenuTemplate.html.twig" %}

{% block bodyHeaderOptions %}
    {{ parent() }}
    <div class="container-fluid">
        <form method="post">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <h1 class="h2">
                        <i class="fas fa-file-invoice-dollar fa-fw"></i>
                        {{ i18n.trans(fsc.title) }}
                    </h1> <br>
                    <p>
                        {{ i18n.trans('benefits-report-p') }}
                    </p>
                    <p>
                        {{ i18n.trans('benefits-report-p2') }}
                    </p>
                </div>
            </div>
            <div class="row align-items-end">
                <div class="col-sm-3">
                    <div class="form-group">
                        {{ i18n.trans('date-from') }}
                        <input type="date" name="date-from" class="form-control" value="{{ fsc.fechadesde }}" required="true" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        {{ i18n.trans('date-to') }}
                        <input type="date" name="date-to" class="form-control" value="{{ fsc.fechahasta }}" required="true" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <button type="submit" name="action" value="show" class="btn btn-primary">
                            <i class="fas fa-eye fa-fw"></i> {{ i18n.trans('preview') }}
                        </button>
                        <button type="submit" name="action" target="_blank" value="download" class="btn btn-primary">
                            <i class="fas fa-arrow-down fa-fw"></i> {{ i18n.trans('download') }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    </div>

    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="documents-tab" data-toggle="tab" href="#documents" role="tab" aria-controls="documents" aria-selected="true">
                {{ i18n.trans('documents') }}
            </a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <div class="tab-content">
        <div class="tab-pane fade show active" id="documents" role="tabpanel" aria-labelledby="documents-tab">
            {{ _self.data(fsc, i18n) }}
        </div>
    </div>         
{% endblock %}

{% macro data(fsc, i18n) %}
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>{{ i18n.trans('reference') }}</th>
                    <th>{{ i18n.trans('product') }}</th>
                    <th>{{ i18n.trans('bought-units') }}</th>
                    <th>{{ i18n.trans('bought-amount') }}</th>
                    <th>{{ i18n.trans('sales-units') }}</th>
                    <th>{{ i18n.trans('sales-amount') }}</th>
                    <th>{{ i18n.trans('benefit') }}</th>
                    <th>%</th>
                </tr>
            </thead>
            <tbody>
                {% for row in fsc.data %}
                    <tr>
                        <td>{{ row.referencia }}</td>
                        <td>{{ row.descripcion }}</td>
                        <td>{{ row.cantidadcompras }}</td>
                        <td>{{ fsc.toolBox().coins().format(row.importecompras) }}</td>
                        <td>{{ row.cantidadventas }}</td>
                        <td>{{ fsc.toolBox().coins().format(row.importeventas) }}</td>
                        <td>{{ fsc.toolBox().coins().format(row.beneficio)  }}</td>
                        <td>{{ row.porcentaje }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endmacro %}

{% block css %}
    {{ parent() }}
    <style>
        .bg-header {
            background-color: #FAFBFC;
        }
    </style>
{% endblock %}